  "snippets": [
    {
      "id": "st-hx",
      "trigger": "sorethroat",
      "label": "Sore Throat History",
      "category": "History",
      "content": "Sore throat for [Duration]. Associated with {fever|no fever*}. {cough present|no cough*}. No difficulty breathing or stridor. No drooling. Able to swallow fluids. No recent travel or sick contacts."
    },
    {
      "id": "st-centor",
      "trigger": "centor",
      "label": "Centor Criteria",
      "category": "Assessment",
      "content": "Centor score: {0|1|2|3*|4}/4\n- Tonsillar exudate: {yes|no*}\n- Tender anterior cervical lymphadenopathy: {yes|no*}\n- Fever >38°C: {yes|no*}\n- Absence of cough: {yes|no*}"
    },
    {
      "id": "st-exam",
      "trigger": "throatexam",
      "label": "Throat Examination",
      "category": "Examination",
      "content": "Oropharynx: {erythematous|normal*}. Tonsils {enlarged and erythematous|normal*}. {Exudate present|No exudate*}. No peritonsillar swelling or asymmetry. Anterior cervical lymph nodes {tender|non-tender*}."
    },
    {
      "id": "st-viral",
      "trigger": "viralthroat",
      "label": "Viral Sore Throat Plan",
      "category": "Plan",
      "content": "Impression: Likely viral pharyngitis.\nPlan:\n- Supportive care: regular paracetamol/ibuprofen, warm fluids, throat lozenges\n- Antibiotics not indicated at this time\n- Safety net: return if worsening, difficulty swallowing/breathing, or not improving in {5|7*|10} days\n- Review @date(+7d) if not resolving"
    },
    {
      "id": "st-abx",
      "trigger": "throatabx",
      "label": "Sore Throat Antibiotics",
      "category": "Plan",
      "content": "Phenoxymethylpenicillin 500mg QDS for 10 days.\nIf penicillin allergic: clarithromycin 250mg BD for 5 days.\nAdvised to complete full course. Safety net provided."
    },
    {
      "id": "st-safety",
      "trigger": "safetynet",
      "label": "Safety Netting",
      "category": "Safety Net",
      "content": "Safety net advice given:\n- Return if difficulty breathing or swallowing\n- Return if unable to manage fluids\n- Return if symptoms worsen significantly\n- Return if not improving after {5|7*|10} days\n- Advised to call 999 if stridor or severe breathing difficulty"
    }
  ],
